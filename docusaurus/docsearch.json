{
  "index_name": "kube-design",
  "start_urls": [
    {
      "url": "https://kube-design-docs.vercel.app/",
      "selectors_key": "documentation"
    }
  ],
  "sitemap_urls": [
    "https://kube-design-docs.vercel.app/sitemap.xml"
  ],
  "stop_urls": [],
  "selectors": {
    "documentation": {
      "lvl0": {
        "selector": ".navbar__brand",
        "default_value": "Kube Design"
      },
      "lvl1": ".markdown h1, .doc-markdown h1, h1",
      "lvl2": ".markdown h2, .doc-markdown h2, h2",
      "lvl3": ".markdown h3, .doc-markdown h3, h3",
      "lvl4": ".markdown h4, .doc-markdown h4, h4",
      "text": ".markdown p, .doc-markdown p, .markdown li, .doc-markdown li, p, li",
      "a_text": {
        "selectors": "a"
      },
      "lang": {
        "selector": "html lang",
        "type": "xpath",
        "global": true
      }
    }
  },
  "strip_chars": " .,;:#",
  "custom_settings": {
    "attributesForFaceting": ["lang", "lvl0", "lvl1"],
    "attributesToRetrieve": ["hierarchy", "content", "anchor", "url"],
    "separatorsToIndex": "_"
  },
  "conversation_id": ["comments"],
  "js_render": true,  // 启用 JS 执行，抓动态内容
  "js_wait": 3,       // 等待 3 秒加载 Docusaurus 组件
  "max_depth": 3      // 限制爬取深度，避免无限循环
}
